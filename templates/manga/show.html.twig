{% extends 'base.html.twig' %}

{% block title %}{{ manga.nombre }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/animeflv.css') }}"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css"
          integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <div class="Body">
        <div>
            <div class="Ficha fchlt">
                <div class="Bg" style="background-image:url('{{ asset('media/'~manga.getPortada()) }}')"></div>
                <div class="Container">
                    <h1 class="Title">{{ manga.nombre }}</h1>

                </div>
            </div>
            <div class="Container">
                <div class="BX Row BFluid Sp20">

                    <aside class="SidebarA BFixed">
                        <div class="AnimeCover">
                            <div class="Image">
                                <figure><img src="{{ asset('media/'~ manga.getPortada()) }}"
                                             alt="{{ manga.getPortada() }}"
                                             itemprop="image"></figure>
                            </div>
                        </div>

                        <div id="segir"><a href="#" class="BtnNw Pndng BxSdw "><span><i class="fas fa-heart"></i></span></a>
                        </div>
                        <div id="dejarSeguir" style="display: none"><a href="#" class="BtnNw Pndng BxSdw"><span><i
                                            class="far fa-heart"></i></span></a>
                        </div>

                    </aside>


                    <main class="Main">

                        <section class="WdgtCn">
                            <div class="Top">
                                <div class="Title">Sinopsis</div>
                            </div>

                            <div class="Description">
                                <p>{{ manga.descripcion }}</p>
                            </div>
                            <div style="clear:both"></div>
                        </section>

                        <section class="WdgtCn">
                            <div class="Top">
                                <div class="Title">Lista de episodios</div>
                            </div>

                            <ul class="ListCaps" id="episodeList" style="max-height: 1000px; overflow-y: auto;">
                                {% for capitulo in manga.capitulos %}
                                    <li value="{{ capitulo.id }}"><a href="{#TODO poner enlace#}">
                                            <h3 class="Title">{{ capitulo.nombre }} </h3>
                                        </a><label for="{{ capitulo.id }}" class="opivw">
                                            <input id="{{ capitulo.id }}" class="mseen" style="display: none;" type="checkbox"><span class="Stts"><span>NO</span> VISTO</span></label></li>
                                {% endfor %}

                            </ul>
                        </section>


                    </main>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    {#
